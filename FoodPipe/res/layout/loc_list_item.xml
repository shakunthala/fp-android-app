<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/loc_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/hotel_img"
        android:paddingLeft="5dp" />

    <!-- RATING OF THE LOCATION NEEDS TO BE HERE -->

    <TextView
        android:id="@+id/loc_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loc_title"
        android:layout_toRightOf="@+id/loc_image"
        android:text="SUB - TITLE OF THE LOCATION"
        android:layout_marginTop="2dp"
       	android:layout_marginLeft="15dp"
        android:textColor="#808080"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/loc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/loc_image"
        android:text="TITLE OF THE LOCATION"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#ff4444"
        android:textSize="18sp" />

</RelativeLayout>